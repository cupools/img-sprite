#!/usr/bin/env node

'use strict';
var argv = require('yargs')
    .option('s', {
        alias: 'src',
        demand: true,
        describe: 'css file input path',
        type: 'string'
    })
    .option('d', {
        alias: 'dest',
        demand: false,
        describe: 'css file output path',
        type: 'string'
    })
    .option('o', {
        alias: 'output',
        demand: false,
        describe: 'images\' output path',
        type: 'string'
    })
    .option('r', {
        alias: 'retina',
        demand: false,
        default: true,
        describe: 'retina or not, default to true',
        type: 'boolean'
    })
    .option('padding', {
        demand: false,
        describe: 'padding between images, default to 10',
        type: 'string'
    })
    .option('prefix', {
        demand: false,
        describe: 'add before images\' filename, default to "sprite-"',
        type: 'string'
    })
    .option('imgPath', {
        demand: false,
        describe: 'images\' path, default to "../images/"',
        type: 'string'
    })
    .option('algorithm', {
        demand: false,
        describe: 'list algorithm, default to "binary-tree"',
        type: 'string'
    })
    .argv;

var args = {
    src: argv.s.split(','),
    dest: argv.d,
    output: argv.o,
    imgPath: argv.imgPath,
    prefix: argv.prefix,
    retina: argv.retina,
    algorithm: argv.algorithm,
    padding: argv.padding
}

require('../index')(args);
